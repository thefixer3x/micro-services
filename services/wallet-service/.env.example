# Server Configuration
NODE_ENV=development
PORT=3002
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wallet_service
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/wallet_service

# Redis Configuration (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Default Wallet Provider
DEFAULT_WALLET_PROVIDER=providus

# Providus Bank (Xpress Wallet) Configuration
PROVIDUS_BASE_URL=https://api.xpresswallet.com
PROVIDUS_SANDBOX_URL=https://sandbox.api.xpresswallet.com
PROVIDUS_API_KEY=your-providus-api-key
PROVIDUS_CLIENT_ID=your-client-id
PROVIDUS_CLIENT_SECRET=your-client-secret
PROVIDUS_USE_SANDBOX=true

# Flutterwave Configuration (Future)
# FLUTTERWAVE_PUBLIC_KEY=
# FLUTTERWAVE_SECRET_KEY=
# FLUTTERWAVE_ENCRYPTION_KEY=

# Paystack Configuration (Future)
# PAYSTACK_SECRET_KEY=
# PAYSTACK_PUBLIC_KEY=

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/wallet-service.log

# Service URLs (for inter-service communication)
IDENTITY_SERVICE_URL=http://localhost:3001
TRANSACTION_SERVICE_URL=http://localhost:3003
