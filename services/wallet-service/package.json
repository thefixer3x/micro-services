{
  "name": "wallet-service",
  "version": "1.0.0",
  "description": "Multi-provider wallet management service supporting Providus Bank, Flutterwave, and other providers",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "migrate": "ts-node src/database/migrate.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "wallet",
    "payments",
    "multi-provider",
    "providus",
    "microservice",
    "nodejs",
    "express"
  ],
  "author": "Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "axios": "^1.6.0",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "uuid": "^9.0.1",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/pg": "^8.10.2",
    "@types/cors": "^2.8.14",
    "@types/uuid": "^9.0.5",
    "@types/node": "^20.6.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.49.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
